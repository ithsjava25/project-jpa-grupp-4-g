<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.TravelGameController"
            stylesheets="/app.css">

    <center>
        <StackPane fx:id="mapContainer" alignment="CENTER">
            <ImageView fx:id="mapView"
                       preserveRatio="false"
                       fitWidth="900"
                       fitHeight="700"
                       pickOnBounds="true" />

            <Pane fx:id="drawingPane" onMouseClicked="#onMapClicked" />
        </StackPane>
    </center>

    <right>
        <VBox spacing="10" prefWidth="320" style="-fx-padding: 30 20 20 20;">
            <Label text="Log"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <ListView fx:id="logList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </right>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 12;" styleClass="bottom-bar">


            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="Current:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="currentPlayerLabel" text="-" style="-fx-text-fill: white;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Last roll:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="lastRollLabel" text="-" style="-fx-text-fill: white;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Next:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="nextPlayerLabel" text="-" style="-fx-text-fill: white;"/>
            </HBox>


            <HBox alignment="CENTER" spacing="20">


                <VBox spacing="4" prefWidth="520" alignment="CENTER_LEFT">
                    <HBox spacing="10">
                        <Label text="Credits:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Label fx:id="currentCreditsLabel" text="0" style="-fx-text-fill: white;"/>
                        <Label text="Turn:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Label fx:id="currentTurnLabel" text="0" style="-fx-text-fill: white;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Location:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Label fx:id="currentLocationLabel" text="-" style="-fx-text-fill: white;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Destination:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Label fx:id="destinationLabel" text="-" style="-fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>


                <Button text="ROLL"
                        fx:id="rollButton"
                        onAction="#onRoll"
                        styleClass="roll-button"/>


                <Button text="DEMO PATH"
                        onAction="#startMockJourney"
                        styleClass="journey-button"/>

            </HBox>
        </VBox>
    </bottom>

</BorderPane>
